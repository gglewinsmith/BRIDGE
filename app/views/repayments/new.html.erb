<div class="repayment-background-container">
  <div class="repayment-container-pop">
    <h1>Tuition Loan for <%= @fundraising_event.course.capitalize  %></h1>
    <h4>Repayment to <%= @loan.user.name.capitalize %></h4>
    <h4><strong>Amount Due | Â£<%= @loan.amount_owed %></strong></h4>
    <h4>How much would you like to repay?</h4>
    <%= form_tag "/fundraising_events/#{@fundraising_event.id}/loans/#{@loan.id}/repayments" do %>
      <%= hidden_field_tag 'loan_id', @loan.id %>
      <%= number_field_tag 'amount', label: "How much do you want to repay?" %>
      <%= submit_tag 'Repay', class: 'btn btn-homepage' %>
    <% end %>
  </div>
</div>
