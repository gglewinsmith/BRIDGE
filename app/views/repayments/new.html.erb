<div class="repayment-background-container">
  <div class="repayment-container-pop">
    <h4 class="pads">Repay <%= @loan.user.name.capitalize %></h4>
    <h4 class="one-off pads">One off early repayment</h4>
    <h4 class="pads"><strong>Amount Due | Â£<%= @loan.amount_owed %></strong></h4>
    <h4 class="pads">Repayment amount</h4>
    <%= form_tag "/fundraising_events/#{@fundraising_event.id}/loans/#{@loan.id}/repayments" do %>
      <%= hidden_field_tag 'loan_id', @loan.id %>
      <%= number_field_tag 'amount', label: "How much do you want to repay?" %>
      <%= submit_tag 'Repay', class: 'btn-repay' %>
      <%= link_to "Back", dashboard_path, class: "btn-back" %>
    <% end %>
  </div>
</div>
