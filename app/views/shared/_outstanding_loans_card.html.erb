<%= link_to fundraising_event_path(loan.fundraising_event_id) do %>
  <div class="<%= loan.state == 'repaid' ? 'repayment-card complete-hover complete-border' : 'repayment-card incomplete-hover incomplete-border' %>">
    <div class="avatar-lender">
      <% if loan.fundraising_event.user.photo? %>
        <% photo_url =  loan.fundraising_event.user.photo_url(:bright_face) %>
      <% else %>
        <% photo_url = "https://via.placeholder.com/150" %>
      <% end %>
      <%= image_tag photo_url, class: "avatar-medium" %>
    </div>
    <div class="card-content-main">
      <h1 class="debtor-name">Debtor | <%= loan.fundraising_event.user.name.capitalize %></h1>
      <h2 class="course-detail">Loan for Tuition at <%= loan.fundraising_event.course.titleize %></h2>
      <div class="counter">
        <div class="counter-lender">
          <h4 class="lender-counters">Loan amount:</h4>
          <h4 class="orange-counter">Â£<%= loan.amount %></h4>
          <h4 class="lender-counters">Loan length (months):</h4>
          <h4 class="orange-counter"><%= loan.loan_length %></h4>
          <h4 class="lender-counters">Interest rate:</h4>
          <h4 class="green-counter">4% p.a.</h4>
        </div>
      </div>
    </div>
    <div class="width-loan margin-width-loan">
      <h2 class="loan-os"><%= humanized_money_with_symbol(loan.amount_owed) %></h2>
      <h2 class="outstanding">outstanding</h2>
    </div>
  </div>
<% end %>



