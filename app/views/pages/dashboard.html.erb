<% if current_user.applicant? %>
  <div class="container dashboard">
  <div class="profile">
    <div class="avatar">
      <% if current_user.photo? %>
        <% photo_url =  current_user.photo_url(:bright_face) %>
      <% else %>
        <% photo_url = "https://via.placeholder.com/150" %>
      <% end %>
      <%= image_tag photo_url, class: "avatar-large" %>
      <br>
      <%= link_to 'edit profile', edit_user_registration_path, method: :edit, class: "text-center" %>
    </div>
    <div class="width">
      <h2 class="username"> <%= current_user.name %></h2>
      <p class="email"><%= current_user.email %></p>
        <div class="stats">
          <p>1 loan maturing</p>
          <p>5 loan applications</p>
          <p>5 people invested in you</p>
        </div>
      <p class="email">Motivation / About - Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
    </div>
    </div>
    <div class="tabs">
      <p class="tab-selected">Pending loan applications</p>
      <p class="tab">Maturing loans</p>
      <p class="tab-selected">Pending loan offers</p>
      <p class="tab">Maturing loans</p>
    </div>
  </div>
  <div class="wrapper">
    <div class="container">
      <h1>Fundraising Events</h1>
      <div class="row">
        <% @fundraising_events.each do |f| %>
          <div class="col-xs-12">
            <%= render "shared/applicant_card", fundraising_event: f %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="wrapper">
    <div class="container">
      <h1>Loans Recieved</h1>
      <div class="row">
        <% @loans.each do |l| %>
          <div class="col-xs-12">
            <%= render "shared/loan_card", loan: l %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to 'Create a Loan', new_fundraising_event_path, class: "btn btn-danger dashboard-btn" %>
  <%= link_to 'View outstanding loans', fundraising_events_path, class: "btn btn-danger dashboard-btn" %>
<% elsif current_user.lender? %>
  <h1>Lender Dashboard</h1>
  <div class="dashboard-btns">
    <%= link_to 'View Loan Oppurtunities', fundraising_events_path, class: "btn btn-danger dashboard-btn" %>
  </div>
  <% @loans.each do |loan| %>
    <div class="col-xs-12">
      <%= render "shared/loan_card", loan: loan %>
    </div>
  <% end %>
<% end %>


















