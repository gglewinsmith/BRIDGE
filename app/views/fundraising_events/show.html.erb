<!-- show specific fundraising event page dynamically -->
<% content_for :meta_title, "#{@fundraising_event.user.name} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @fundraising_event.course %>

<div class="container" id=homepage>
  <h1 class="show-title"><%=@fundraising_event.user.name %>'s request for a loan for <%=@fundraising_event.course %>: <%= humanized_money_with_symbol(@fundraising_event.price)%></h1>
  <div class="show-flex">
    <ul class="fundraising-text show-text">
      <li><h3 class="white-text">Name | <%= @fundraising_event.user.name %></h3></li>
      <li><h3 class="white-text">Loan required | <%= humanized_money_with_symbol(@fundraising_event.price) %></h3></li>
      <li><h3 class="white-text">Course name | <%= @fundraising_event.course %></h3></li>
      <li><h3 class="white-text">Financial guarantor | <%= @fundraising_event.guarantor %></li>
      <li><h3 class="white-text">Loan length | <%= @fundraising_event.loan_length%></h3></li>
      <li><h3 class="white-text">Career goals | <%= @fundraising_event.career_goals%></h3></li>
      <li><h3 class="white-text">Course from | <%= @fundraising_event.date_from %> to | <%= @fundraising_event.date_until%></h3></li>
      <%= link_to 'Click here to view CV', fundraising_event_cv_path(@fundraising_event), class: "white-text" %>
    </ul>

    <div style="width: 400px; margin: 50px auto">
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="max-width: <%= ((@fundraising_event.amount_raised / @fundraising_event.price) * 100) %>">
        <span class="title"><%= ((@fundraising_event.amount_raised / @fundraising_event.price) * 100) %>%</span>
        </div>
      </div>
    </div>

    <div style="width: 400px; margin: 50px auto">
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="max-width: <%= (100 - ((@fundraising_event.amount_due / @fundraising_event.amount_raised) * 100)).round %>">
        <span class="title"><%= (100 - ((@fundraising_event.amount_due / @fundraising_event.amount_raised) * 100)).round %>%</span>
        </div>
      </div>
    </div>

    <% if current_user.lender? %>
      <%= form_tag "/fundraising_events/#{@fundraising_event.id}/loans", class: 'black-text' do %>
        <%= hidden_field_tag 'fundraising_event_id', @fundraising_event.id %>
        <%= number_field_tag 'amount', label: "How much do you want to lend?" %>
        <%= submit_tag 'Fulfill this loan', class: 'btn btn-primary btn-homepage' %>
      <% end %>
    <% end %>
    <% if @fundraising_event.amount_due == 0 %>
      <%= link_to "Delete", dashboard_path,
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
  <%= link_to 'Back to dashboard', dashboard_path, class: "btn btn-primary btn-homepage btn-show" %>
</div>

