<div style="background-color: #CAD9E3; padding: 40px 0">
  <div class="devise-form-box">
    <div class="row">
      <h2 class="devise-h2">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs edit-form-text">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { class: "edit-form-style", autocomplete: "email" } %>
          <div class="linear-border"></div>
        </div>

        <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary button-edit-page' %>
        </div>

      <% end %>

  <!--     <%= render "devise/shared/links" %> -->
    </div>
  </div>
</div>
