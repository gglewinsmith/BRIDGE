<div style="background-color: #CAD9E3; padding: 40px 0">
  <div class="devise-form-box">
    <div class="row">
      <h2 class="devise-h2">Change your password</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs edit-form-text">
          <%= f.input :password,
                      label: "New password",
                      required: true,
                      autofocus: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { class: "edit-form-style", autocomplete: "new-password" } %>
          <div class="linear-border"></div>
          <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
        </div>

        <div class="form-actions">
            <%= f.button :submit, "Change my password", class: 'btn btn-primary button-edit-page' %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
